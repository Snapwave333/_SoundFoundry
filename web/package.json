    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "lint:tokens": "grep -R --line-number -E '#[0-9a-fA-F]{3,8}|hsl\\([^v]|rgb\\([^v]' web/components && echo 'Found hardcoded colors' && exit 1 || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lhci": "lhci autorun --collect.url=https://promptbloom.app --collect.numberOfRuns=2 --assert.assertions.categories:performance>=0.9 --assert.assertions.categories:accessibility>=0.9 --assert.assertions.categories:best-practices>=0.9 --assert.assertions.categories:seo>=0.9",
    "test:access": "pa11y https://promptbloom.app --reporter cli",
    "test:links": "blc https://promptbloom.app --recursive --exclude=/app --filter-level=3",
    "test:login:smoke": "node ../scripts/smoke-login.js",
    "test:headers": "node ../scripts/check-headers.js",
    "test:dns": "node ../scripts/check-dns-ssl.js",
